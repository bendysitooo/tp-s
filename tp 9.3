#include <iostream>
using namespace std;

class Operaciones {
private:
    int num1, num2;

public:
    Operaciones(int a, int b) {
        num1 = a;
        num2 = b;
    }    void sumar() {
        cout << "Suma: " << num1 + num2 << endl;
    }    void restar() {
        cout << "Resta: " << num1 - num2 << endl;
    }    void multiplicar() {
        cout << "Multiplicación: " << num1 * num2 << endl;
    }
    void dividir() {
        if (num2 != 0) {
            cout << "División: " << static_cast<float>(num1) / num2 << endl;
        } else {
            cout << "Error: División por cero no es posible." << endl;
        }
    }
};

int main() {
    int a, b;
    cout << "Ingrese el primer número: ";
    cin >> a;
    
    cout << "Ingrese el segundo número: ";
    cin >> b;

    Operaciones operacion(a, b);

    operacion.sumar();
    operacion.restar();
    operacion.multiplicar();
    operacion.dividir();

    return 0;
}
