#include <iostream>
#include <vector>
using namespace std;
class Rectangulo {
public:
    float base, altura;

    void ingresarDatos() {
        cout << "Base: "<< endl;
        cin >> base;
        cout << "Altura: "<< endl;
        cin >> altura;
    }

    float area() const {
        return base * altura;
    }

    float perimetro() const {
        return 2 * (base + altura);
    }
};

int main() {
    vector<Rectangulo> rectangulos;
    int numRectangulos;

   cout << "Ingrese el numero de rectangulos: "<< endl;
   cin >> numRectangulos;

    for (int i = 0; i < numRectangulos; ++i) {
        Rectangulo r;
        r.ingresarDatos();
        rectangulos.push_back(r);
    }

   cout << " Area y perÃ­metro de los rectangulos:"<< endl;
    for (const auto& r : rectangulos) {
        cout << "Area: " << r.area() << endl << "Perimetro: " << r.perimetro() << endl;
    }

    return 0;
}
