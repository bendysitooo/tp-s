#include <iostream>
#include <vector>
#include <algorithm>
#include <string>
using namespace std;
class Persona {
public:
    string nombre;
    int edad;

    void ingresarDatos() {
        cout << "Nombre: "<< endl;
        cin >> nombre;
        cout << "Edad: "<< endl;
        cin >> edad;
    }
};

bool compararPorEdad(const Persona& p1, const Persona& p2) {
    return p1.edad < p2.edad;
}

int main() {
    vector<Persona> personas;
    int numPersonas;

    cout << "Ingrese el nÃºmero de personas: " << endl;
    cin >> numPersonas;

    for (int i = 0; i < numPersonas; ++i) {
        Persona p;
        p.ingresarDatos();
        personas.push_back(p);
    }

    sort(personas.begin(), personas.end(), compararPorEdad);

    cout << endl << "Datos de las personas ordenadas por edad:"<< endl << endl;
    for (const auto& p : personas) {
        cout << "Nombre: " << p.nombre<< endl << ", Edad: " << p.edad << endl;
    }

    return 0;
}
