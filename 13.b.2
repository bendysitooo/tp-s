       Estudiante estudiante1("Maria",21,16.7);
    cout<<"-Estudiante-"<<endl;
    estudiante1.mostrarEstudiante();
    cout<<"\n";
   
    Tecnico tecnico1("Alejandro",9999,15.6,"Informatica");
