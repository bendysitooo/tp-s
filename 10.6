#include <iostream>
#include <vector>
#include <algorithm>
#include <string>
using namespace std;

class Libro {
public:
    string titulo;
    string autor;
    int anioPublicacion;

    void ingresarDatos() {
        cout << "Título: " << endl;
        cin >> titulo;
        cout << "Autor: " << endl;
        cin >> autor;
        cout << "Año de publicación: " << endl;
        cin >> anioPublicacion;
    }
};

bool compararPorAnio(const Libro& l1, const Libro& l2) {
    return l1.anioPublicacion < l2.anioPublicacion;
}

int main() {
    vector<Libro> libros;
    int numLibros;

    cout << "Ingrese el número de libros: " << endl;
    cin >> numLibros;

    for (int i = 0; i < numLibros; ++i) {
        Libro l;
        l.ingresarDatos();
        libros.push_back(l);
    }

    sort(libros.begin(), libros.end(), compararPorAnio);

    cout << "\nDatos de los libros ordenados por año de publicación:\n";
    for (const auto& libro : libros) {
        cout << "Título: " << libro.titulo << endl
             << "Autor: " << libro.autor << endl
             << "Año de publicación: " << libro.anioPublicacion << endl;
    }
    return 0;
}
