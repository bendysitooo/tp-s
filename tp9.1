#include <iostream>
#include <string>
using namespace std;
class Alumno {
private:
    string nombre;
    int edad;
public:
    Alumno(const string n, int e) : nombre(n), edad(e) {}
    void imprimirDatos() const {
        cout << "Nombre: " << nombre << endl;
        cout << "Edad: " << edad << endl;
    }
    void verificarEdad() const {
        if (edad >= 18) {
            cout << nombre << " es mayor de edad." << endl;
        } else {
            cout << nombre << " no es mayor de edad." << endl;
        }
    }
};

int main() {
string Nombre;
int edad;
cout << "Ingrese el Nombre" << endl;
cin >> Nombre;
cout << "Ingrese la Edad" << endl;
cin >> edad;
    Alumno alumno1(Nombre, edad);
    alumno1.imprimirDatos();
    alumno1.verificarEdad();
    
    return 0;
}
